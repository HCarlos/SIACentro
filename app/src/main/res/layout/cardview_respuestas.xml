<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    android:orientation="vertical"
    android:layout_marginBottom="4dp"
    >

    <LinearLayout
        android:id="@+id/hzbarmaster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >

<!--        android:gravity="bottom"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toTopOf="@id/llProfile"-->

        <TextView
            android:id="@+id/txtMessageIzquierda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:padding="8dp"
            android:textColor="@color/grayfuerte"
            android:background="@drawable/textview_chat_izquierda"
            />

        <TextView
            android:id="@+id/txtMessageDerecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:padding="8dp"
            android:textColor="@color/grayfuerte"
            android:background="@drawable/textview_chat_derecha"
            />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>